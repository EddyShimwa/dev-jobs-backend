datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  username String
  email    String   @unique
  password String
  role     String
}

model Job {
  id          Int      @id @default(autoincrement())
  company     String
  logo        String
  position    String
  postedAt    DateTime @default(now())
  contract    String
  location    String
  website     String
  isAvailable Boolean
  apply       String
  description String
  requirements Json
  role        Json
}